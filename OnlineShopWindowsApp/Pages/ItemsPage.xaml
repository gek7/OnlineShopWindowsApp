    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,5,0,0">
            <TextBlock Text="Сортировка: " Margin="0,0,10,0"/>
            <ComboBox Width="150" materialDesign:ComboBoxAssist.ClassicMode="True">
                <ComboBoxItem>
                    a
                </ComboBoxItem>
                <ComboBoxItem>
                    b
                </ComboBoxItem>
                <ComboBoxItem>
                    c
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <materialDesign:Card materialDesign:ShadowAssist.ShadowEdges="Right,Top" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="4,10,4,0">
                    <usercontrols:RangeControl Header="Цена" Suffix="₽" Margin="3"/>
                    <usercontrols:EnumControl Header="Выбор" Margin="3"/>
                    <usercontrols:BoolControl Header="Условие1"/>
                </StackPanel>
                <Button Grid.Row="1" Margin="10" Width="120" Content="Применить"/>
            </Grid>
        </materialDesign:Card>
        <ScrollViewer Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
            <WrapPanel x:Name="ItemsPanel" />
        </ScrollViewer>

